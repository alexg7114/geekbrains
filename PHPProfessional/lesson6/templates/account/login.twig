{% extends 'layout.twig' %}

{% block title %}Login{% endblock %}

{% block content %}
    {% if error %}
        <span style="color: red; font-weight: bold">Wrong login or password</span>
        <br/><br/>
    {% endif %}

    <form method="post">
        Login: <input type="text" name="login"><br/>
        Pass: <input type="text" name="pwd"><br/>
        <input type="submit" value="login">
    </form>
{% endblock %}