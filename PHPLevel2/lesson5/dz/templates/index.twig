<!doctype html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Goods</title>
    <script
            src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>
</head>
<body>
    Goods:<br>
    <ul id="goods"></ul>
    <button id="load">load more</button>

    <script>
        var from = 0;

        //Функция закрузки блока товаров
        function loadMore()
        {
            $.ajax({
                url: '?from=' + from,
                dataType: 'html',
                success: function (html) {
                    $('#goods').append(html);
                    from += {{ loadSize }};
                }
            });
        }

        //Сразу при загрузке страницы загружаем первый блок товаров
        loadMore();

        //Нажатие кнопка load more
        $('#load').click(function () {
            loadMore();
        });
    </script>
</body>
</html>